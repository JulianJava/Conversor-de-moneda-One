package conversorDeMonedas;
import java.awt.GridBagLayout;

import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.JTextArea;

public class main {
	public static void main(String[] args) {
		 JFrame miJFrame = new JFrame("Conversor de monedas");
		    miJFrame.setSize(400,400);
		    JPanel miJPanel = new JPanel();
		    miJPanel.setSize(700, 700);
		    JLabel miJLabel = new JLabel();
		    miJLabel.setText("Que desea convertir");
		    JComboBox opciones=new JComboBox();
		    opciones.addItem("Peso");
		    opciones.addItem("Dolar");
		    opciones.addItem("Euro");
		    opciones.addItem("Libra Esterlina");
		    opciones.addItem("Yen");
		    opciones.addItem("Won");
		    miJPanel.add(miJLabel);
		    miJFrame.add(miJPanel);
		    miJFrame.add(opciones);
		    miJFrame.setVisible(true);



	}

}
